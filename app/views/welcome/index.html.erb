<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <% if current_user && current_user.admin? %>
    <h1>Welcome Back <%= current_user.first_name %>!</h1>
    <%= link_to "Go to Admin Dashboard", admin_users_path, class: 'btn btn-success btn-lg sharp' %>
    <% elsif current_user && current_user.app %>
    <h1>Welcome Back <%= current_user.first_name %>!</h1>
    <%= link_to "Take Me To My App", app_path(current_user.app), class: 'btn btn-success btn-lg sharp' %>
    <% elsif current_user  %>
    <h1>Hello <%= current_user.first_name %>, Ready to Create Your App?</h1>
    <%= link_to "Definitely!", new_app_path, class: 'btn btn-success btn-lg sharp' %>
    <% else %>
    <h1>Build Your Own App In Minutes</h1>
    <%= link_to "Sign Me Up!", new_user_registration_path, class: 'btn btn-success btn-lg sharp' %>
    <% end %>
  </div>
</div>
