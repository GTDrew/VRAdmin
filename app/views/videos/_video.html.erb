<div class="panel panel-default" data-id="<%= video.id %>">
  <div class="panel-body">
    <div class="btn-toolbar">
      <span class="video-name">
        <i class="fa fa-bars" aria-hidden="true"></i> 
        <%= link_to(truncate(video.name, length: 25), app_video_path(@app, video)) %>
      </span>
      <%= link_to 'Delete', app_video_path(@app, video),
      method: :delete,
      data: { confirm: 'Are you certain you want to delete this video?'},
      class: 'btn btn-danger pull-right sharp' %>

      <%= link_to 'Edit', edit_app_video_path(@app, video), class: 'btn btn-primary pull-right sharp' %>
      <span class='pull-right'><%= image_tag(video.image, class: 'video-image text-center') %></span>
    </div>
  </div>
</div>