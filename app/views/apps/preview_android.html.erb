<div class="row">
  <div class="col-md-12">
    <%= link_to 'iPhone', preview_app_path(@app), class: 'btn btn-primary sharp' %>
    <%= link_to 'Android', '', class: 'btn btn-primary active sharp' %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h4>Loading Screen</h4>

    <div class="marvel-device nexus5">
      <div class="top-bar"></div>
      <div class="sleep"></div>
      <div class="volume"></div>
      <div class="camera"></div>
      <div class="screen">
        <% if @app.splash_image?  %>
        <img src="<%= @app.splash_image.url %>" class="img-responsive preview">
        <% end %>
      </div>
    </div>

  </div> <!-- End Column -->

  <div class="col-md-4">
    <h4>App Home Screen</h4>

    <div class="marvel-device nexus5">
      <div class="top-bar"></div>
      <div class="sleep"></div>
      <div class="volume"></div>
      <div class="camera"></div>
      <div class="screen">
        <!-- Content goes here -->
      </div>
    </div>

  </div> <!-- End Column -->

  <div class="col-md-4">

    <h4>App Icon</h4>
    <% if @app.icon  %>
    <img src="<%= @app.icon.url(:thumb) %>" class="img-responsive text-center">
    <% end %>

  </div> <!-- End Column -->
</div>
