<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1><%= @app.name %> <%= link_to "Edit Your App", edit_app_path, class:'btn btn-info pull-right' %></h1>
  </div>
</div>
<div class="row text-center">
  <div class="col-md-6">
    <h2>Icon</h2>
    <% if @app.icon?  %>
    <img src="<%= @app.icon %>" class="img-responsive">
    <% else %>
    <%= image_tag(Faker::Placeholdit.image("150x150", 'jpg')) %>
    <p class="text-center">You haven't uploaded an app icon yet.</p>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2 class="text-center">Header</h2>
    <% if @app.header_image?  %>
    <img src="<%= @app.header_image %>" class="img-responsive">
    <% else %>
    <%= image_tag(Faker::Placeholdit.image("150x150", 'jpg')) %>
    <p class="text-center">You haven't uploaded a header yet.</p>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
        Background Color<br>
        <% if @app.background_color?  %>
        <div class="color-preview" style="background-color: <%= @app.background_color %>"></div>
        <div><%= @app.background_color %></div>
        <!-- <input type="text" name="bg-color" value="<%= @app.background_color %>" class="form-control font-color input-lg"><br> -->
        <% else %>
        <input type="text" name="bg-color" class="form-control bg-color input-lg"><br>
        <% end %>
        Font Color<br>
        <% if @app.font_color?  %>
        <input type="text" name="bg-color" value="<%= @app.font_color %>" class="form-control font-color input-lg"><br>
        <% else %>
        <input type="text" name="bg-color" class="form-control font-color input-lg"><br>
        <% end %>
  </div>
  <div class="col-md-6 text-center">
    <h2>Splash Screen</h2>
    <% if @app.splash_image?  %>
    <img src="<%= @app.splash_image %>" class="img-responsive">
    <% else %>
    <%= image_tag(Faker::Placeholdit.image("220x368", 'jpg')) %>
    <p class="text-center">You haven't uploaded a splash screen yet.</p>
    <% end %>
  </div>
</div>
